# includes --------------------------------------------------------------------#

DIR_INC				:=	../include \
						../include/bonus \
						../include/common \
						../include/mandatory

I_FLAG				:=	$(addprefix -I,$(DIR_INC)) -MMD -MP

# compilation -----------------------------------------------------------------#

CC 					:= 	cc
CFLAGS 				:= 	-Wall -Werror -Wextra -g

#------------------------------------------------------------------------------#
# rules                                                                        #
#------------------------------------------------------------------------------#

all: 
	@$(CC) $(CFLAGS) $(I_FLAG) test_fixepoint.c ../src/common/fixedpoint.c